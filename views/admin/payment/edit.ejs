<%- include ../../components/header.ejs %>
<%- include ../../components/navbar.ejs %>
<%- include ../../components/sidebar.ejs %>

<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Jenis Pembayaran</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/apyment">Jenis Pembayaran</a></li>
            <li class="breadcrumb-item active">Tambah</li>
          </ol>
        </div>
      </div>
    </div>
  </section>

  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form edit jenis pembayaran</h3>
            </div>
            <form action="/payment/edit/<%= payment._id %>?_method=PUT" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label for="type">Type</label>
                  <input type="text" class="form-control" id="type" placeholder="Type" name="type" required value="<%= payment.type %>">
                </div>
                <div class="form-group">
                  <label>Bank</label>
                  <div class="select2-purple">
                    <select class="form-control select2" name="banks" multiple style="width: 100%;" data-placeholder="Pilih bank">
                      <% for(let i = 0; i < banks.length; i++) { %>
                        <option value="<%= banks[i]._id %>"
                          <% payment.banks.forEach(paymentBank => { %>
                            <%= banks[i]._id.toString() == paymentBank._id.toString() ? "selected" : "" %>
                          <% }) %>
                          ><%= banks[i].bankName %> <%= banks[i].bankAccount %></option>  
                      <% } %>
                    </select>
                  </div>
                </div>     
              </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<%- include ../../components/footer.ejs %>
