<%- include ../../components/header.ejs %>
<%- include ../../components/navbar.ejs %>
<%- include ../../components/sidebar.ejs %>

<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Nominal</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
            <li class="breadcrumb-item active">Tambah</li>
          </ol>
        </div>
      </div>
    </div>
  </section>

  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form tambah nominal</h3>
            </div>
            <form action="/nominal/create" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label>Nama koin</label>
                  <select class="form-control select2" name="coinName" style="width: 100%;">
                    <option selected="selected">Pilih Koin</option>
                    <option value="Gold">Gold</option>
                    <option value="Diamond">Diamond</option>
                    <option value="Jewel">Jewel</option>
                    <option value="Token">Token</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="quantity">Jumlah koin</label>
                  <input type="number" class="form-control" id="quantity" placeholder="Jumlah koin" name="coinQuantity" required>
                </div>      
                <div class="form-group">
                  <label for="price">harga</label>
                  <input type="number" class="form-control" id="price" placeholder="harga" name="price" required>
                </div>      
              </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

