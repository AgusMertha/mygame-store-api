<%- include ../../components/header.ejs %>
<%- include ../../components/navbar.ejs %>
<%- include ../../components/sidebar.ejs %>

<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Nominal</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
            <li class="breadcrumb-item active">Ubah</li>
          </ol>
        </div>
      </div>
    </div>
  </section>

  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form ubah nominal</h3>
            </div>
            <form action="/nominal/edit/<%= nominal._id %>?_method=PUT" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label>Nama koin</label>
                  <select class="form-control" name="coinName" style="width: 100%;">
                    <option value="Gold" <%= nominal.coinName == 'Gold' ? 'selected' : '' %>>Gold</option>
                    <option value="Diamond" <%= nominal.coinName == 'Diamond' ? 'selected' : '' %>>Diamond</option>
                    <option value="Jewel" <%= nominal.coinName == 'Jewel' ? 'selected' : '' %>>Jewel</option>
                    <option value="Token" <%= nominal.coinName == 'Token' ? 'selected' : '' %>>Token</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="quantity">Jumlah koin</label>
                  <input type="number" class="form-control" id="quantity" placeholder="Jumlah koin" name="coinQuantity" value="<%= nominal.coinQuantity %>">
                </div>      
                <div class="form-group">
                  <label for="price">harga</label>
                  <input type="number" class="form-control" id="price" placeholder="harga" name="price" value="<%= nominal.price %>">
                </div>      
              </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<%- include ../../components/footer.ejs %>
<%- include ../../components/js.ejs %>